{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_answers_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_answers_list'|trans }}</h1>
    {% if pagination is defined and pagination.items|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label_id'|trans, 'answer.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label_text'|trans, 'answer.answertext') }}</th>
                <th>{{ 'label_actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for answer in pagination.items %}
                <tr>
                    <td>{{ answer.id }}</td>
                    <td>{{ answer.answertext }}</td>
                    <td>

                    </td>
                </tr>
                <tr>

                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>
    {% else %}
        <div class="messages">
            {{ 'message_item_not_found'|trans }}
        </div>
    {% endif %}
{% endblock %}